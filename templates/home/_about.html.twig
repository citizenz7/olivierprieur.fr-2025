    <div class="container py-5">
        <div class="row">
            <h2 class="h2 fw-bold border-bottom mb-5">A propos</h2>
            <div class="col-lg-7 col-sm-12">
                <img src="{{ asset('uploads/img/me.jpg') }}" alt="Olivier Prieur" class="img-apropos">
                <p class="small font-raleway">
                    {{ user.aPropos|replace({'<div>': '', '</div>': '', '<p>': '', '</p>': '',})|raw }}
